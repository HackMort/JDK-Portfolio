---
type Props = {
  className?: string;
  slideNumber: number;
  site: any;
};
const { className, slideNumber, site } = Astro.props;
import Slide from "~/components/Slider/Slide.astro";
---

<div
  class={`f-carousel__slide ${
    className ? className : "showcase-carousel-item"
  }`}
  data-slide-number={slideNumber}
>
  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="showcase__grid_item">
      <Slide className="showcase__images" slides={site.images} />
    </div>
    <div class="showcase__grid_item flex flex-col">
      <h4 class="gradient-text mb-4 font-bold uppercase">{site.title}</h4>
      <p class="mb-4 text-sm">
        {site.description}
      </p>
      <a
        href={site.url}
        target="_blank"
        class="w-32 flex-auto flex-grow-0 rounded-lg bg-indigo-600 p-3 text-center text-white transition duration-300 ease-in-out hover:bg-indigo-700 hover:text-white"
      >
        Visit Site
      </a>
    </div>
  </div>
</div>
